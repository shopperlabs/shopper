{
  "name": "shopper/framework",
  "description": "An e-commerce administration built with Laravel for create and manage online shop.",
  "license": "MIT",
  "keywords": ["e-commerce", "Tallstack", "Store"],
  "authors": [
    {
      "name": "Arthur Monney",
      "email": "monneylobe@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-intl": "*",
    "composer-runtime-api": "^2.1",
    "bacon/bacon-qr-code": "^2.0",
    "blade-ui-kit/blade-heroicons": "^1.2",
    "danharrin/livewire-rate-limiting": "^0.3|^1.0",
    "filament/notifications": "^2.17",
    "illuminate/cache": "^9.0|^10.0",
    "illuminate/console": "^9.0|^10.0",
    "illuminate/container": "^9.0|^10.0",
    "illuminate/contracts": "^9.0|^10.0",
    "illuminate/cookie": "^9.0|^10.0",
    "illuminate/database": "^9.0|^10.0",
    "illuminate/http": "^9.0|^10.0",
    "illuminate/routing": "^9.0|^10.0",
    "illuminate/session": "^9.0|^10.0",
    "illuminate/support": "^9.0|^10.0",
    "illuminate/view": "^9.0|^10.0",
    "jenssegers/agent": "^2.6",
    "laravel/helpers": "^1.4.1",
    "livewire/livewire": "^2.10",
    "maatwebsite/excel": "^3.1",
    "milon/barcode": "^9.0|^10.0",
    "moneyphp/money": "^3.3",
    "pragmarx/google2fa": "^8.0",
    "psr/simple-cache": "^3.0",
    "rappasoft/laravel-livewire-tables": "^2.12",
    "spatie/laravel-medialibrary": "^10.4.1",
    "spatie/laravel-package-tools": "^1.15",
    "spatie/laravel-permission": "^5.5.2",
    "staudenmeir/laravel-adjacency-list": "^1.0",
    "stevebauman/location": "^6.3.1",
    "wire-elements/modal": "^1.0.0",
    "wireui/wireui": "^1.17.9"
  },
  "require-dev": {
    "doctrine/dbal": "^3.6",
    "laravel/pint": "^1.1",
    "mockery/mockery": "^1.4",
    "nunomaduro/collision": "^5.11|^6.1",
    "nunomaduro/larastan": "^2.0",
    "orchestra/testbench": "^7.0|^8.0",
    "pestphp/pest": "^1.21",
    "pestphp/pest-plugin-laravel": "^1.0",
    "pestphp/pest-plugin-livewire": "^1.0",
    "pestphp/pest-plugin-parallel": "^0.3",
    "phpstan/phpstan": "^1.8",
    "phpunit/phpunit": "^8.4|^9.0",
    "reecem/mocker": "^1.2",
    "symplify/monorepo-builder": "^11.2"
  },
  "autoload": {
    "files": [
      "packages/admin/src/helpers.php",
      "packages/core/src/helpers.php"
    ],
    "psr-4": {
      "Database\\Factories\\": "packages/core/database/factories",
      "Database\\Seeders\\": "packages/core/database/seeders",
      "Shopper\\": [
        "packages/admin/src",
        "packages/core/src",
        "packages/sidebar/src"
      ],
      "Shopper\\Core\\": "packages/core/src",
      "Shopper\\Sidebar\\": "packages/sidebar/src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Shopper\\Tests\\": "tests/src",
      "Shopper\\Tests\\Database\\Factories\\": "tests/database/factories"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Shopper\\ShopperServiceProvider",
        "Shopper\\Core\\CoreServiceProvider",
        "Shopper\\Sidebar\\SidebarServiceProvider"
      ]
    }
  },
  "scripts": {
    "baseline": "./vendor/bin/phpstan analyse --generate-baseline",
    "pint": "./vendor/bin/pint",
    "pest": "./vendor/bin/pest",
    "stan": "./vendor/bin/phpstan analyse --memory-limit=1G"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "replace": {
    "shopper/core": "self.version",
    "shopper/framework": "self.version",
    "shopper/sidebar": "self.version"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
