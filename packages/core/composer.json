{
  "name": "shopper/core",
  "description": "Laravel Shopper e-commerce core functionality",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "ext-intl": "*",
    "spatie/laravel-medialibrary": "^10.4.1",
    "spatie/laravel-permission": "^5.5.2",
    "staudenmeir/laravel-adjacency-list": "^1.0"
  },
  "autoload": {
    "files": [
      "src/helpers.php"
    ],
    "psr-4": {
      "Shopper\\Core\\": "src/",
      "Database\\Factories\\": "database/factories",
      "Database\\Seeders\\": "database/seeders"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Shopper\\Core\\CoreServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
